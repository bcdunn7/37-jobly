                "job"
            ],
            "title": "The title schema",
            "maxLength": 30,
            "minLength": 0,
            "type": "string"
        },
        "salary": {
            "$id": "#/properties/salary",
            "default": 0,
            "title": "The salary schema",
            "minimum": 0,
            "type": "integer"
        },
        "equity": {
            "$id": "#/properties/equity",
            "default": 0.0,
            "title": "The equity schema",
            "maximum": 1,
            "minimum": 0,
            "type": "number"
        }
    },
    "additionalProperties": true
}